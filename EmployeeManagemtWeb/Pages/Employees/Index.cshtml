@page
@model EmployeeManagemntWeb.Pages.Employees.EmployeeListModel
@{
}

<h1 class="mb-3">List of Employees</h1>
<form method="get">
    <input type="text" asp-for="SearchName" placeholder="name" />
    <input type="text" asp-for="SearchEmail" placeholder="Email" />
    <input type="text" asp-for="SearchDepartmentName" placeholder="Department" />
    <input type="submit" value="Filter" />
</form>
<div>
    <a href="/Employees/Add">Add New</a>
</div>
@if (Model.employeeListViewModel != null && Model.employeeListViewModel.Employees != null && Model.employeeListViewModel.Employees.Any())
{
    <table class="table">

        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Department
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model.employeeListViewModel.Employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.DateOfBirth</td>
                    <td><a href="/Employees/Edit/@employee.Id" class="btn btn-dark">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>
        No Employees Found
    </h2>
}