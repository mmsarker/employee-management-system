@page "{Id:Guid}"
@model EmployeeManagemntWeb.Pages.Employees.EditEmployeeModel
@{
}

<form method="post">
    <h1 class="mb-3">Edit Employee</h1>
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="EditEmployeeViewModel.DateOfBirth" />
    </div>
    <div class="mb-3">
        <label class="form-label">Department</label>
        <select  class="form-select" asp-for="EditEmployeeViewModel.DepartmentId" asp-items="@Model.Departments"></select>        
    </div>
    <br />
    <div class="mb-3">
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">Save</button>    
        <button type="submit" class="btn btn-primary" asp-page-handler="Delete">Delete</button>
    </div>
</form>