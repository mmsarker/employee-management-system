@page
@model EmployeeManagemntWeb.Pages.Employees.AddEmployeeModel
@{
}

<form method="post">
    <h1 class="mb-3">Add new Employee</h1>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="addEmployeeViewModel.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="text" class="form-control" asp-for="addEmployeeViewModel.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="addEmployeeViewModel.DateOfBirth" />
    </div>
    <div class="mb-3">
        <label class="form-label">Department</label>
        <select class="form-select" asp-for="addEmployeeViewModel.DepartmentId" asp-items="@Model.Departments"></select>        
    </div>
    <br />
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>